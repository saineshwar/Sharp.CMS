@model Sharp.CMS.ViewModels.Page.EditPageViewModel
@{
    ViewBag.PageName = "Page";
}


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Edit New Page</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="NewPage" autocomplete="off" asp-antiforgery="true" id="newPageform" enctype="multipart/form-data" asp-action="Edit" method="post">
            <input type="hidden" asp-for="PageId" />
            <input type="hidden" asp-for="PageDetailsId" />
            <input type="hidden" asp-for="ContainersId" />
            <input type="hidden" asp-for="IsHomePage" />
            <input type="hidden" asp-for="IsPublished" />

            <div class="card-body register-card-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label class="mandatory" asp-for="ParentPageName"></label>
                        <input asp-for="ParentPageName" placeholder="Enter Name" class="form-control" />
                        <input type="hidden" asp-for="HiddenParentPageId" />
                        <span class="text-danger" asp-validation-for="HiddenParentPageId"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="mandatory" asp-for="ChildPageName"></label>
                        <input asp-for="ChildPageName" placeholder="Enter Name" class="form-control" />
                        <input type="hidden" asp-for="HiddenChildPageId" />
                        <span class="text-danger" asp-validation-for="HiddenChildPageId"></span>
                    </div>

                </div>
                <hr />
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label class="mandatory" asp-for="PageName"></label>
                        <input asp-for="PageName" placeholder="Enter PageName" class="form-control" />
                        <span class="text-danger" asp-validation-for="PageName"></span>
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="Permalink"></label>
                        <input asp-for="Permalink" placeholder="Keep Blank To Auto Generate" class="form-control" />
                        <span class="text-danger" asp-validation-for="Permalink"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="PageTitleEn"></label>
                        <input asp-for="PageTitleEn" placeholder="Enter Page Title" class="form-control" />
                        <span class="text-danger" asp-validation-for="PageTitleEn"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="PageTitleLl"></label>
                        <input asp-for="PageTitleLl" placeholder="Enter Page Title" class="form-control" />
                        <span class="text-danger" asp-validation-for="PageTitleLl"></span>
                    </div>
                </div>
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="MenuNameEn"></label>
                        <input asp-for="MenuNameEn" placeholder="Enter Menu Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="MenuNameEn"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="MenuNameLl"></label>
                        <input asp-for="MenuNameLl" placeholder="Enter Menu Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="MenuNameLl"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="PageHeadingEn"></label>
                        <input asp-for="PageHeadingEn" placeholder="Enter Page Heading" class="form-control" />
                        <span class="text-danger" asp-validation-for="PageHeadingEn"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="PageHeadingLl"></label>
                        <input asp-for="PageHeadingLl" placeholder="Enter Page Heading" class="form-control" />
                        <span class="text-danger" asp-validation-for="PageHeadingLl"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="MetaDescriptionEN"></label>

                        <textarea asp-for="MetaDescriptionEN" placeholder="Enter Meta Description" class="form-control" required="required"></textarea>
                        <span class="text-danger" asp-validation-for="MetaDescriptionEN"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="MetaDescriptionLl"></label>
                        <textarea asp-for="MetaDescriptionLl" placeholder="Enter Meta Description" class="form-control" required="required"></textarea>
                        <span class="text-danger" asp-validation-for="MetaDescriptionLl"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="MetaKeywordsEN"></label>
                        <textarea asp-for="MetaKeywordsEN" placeholder="Meta Keywords English" class="form-control" required="required"></textarea>
                        <span class="text-danger" asp-validation-for="MetaKeywordsEN"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="mandatory" asp-for="MetaKeywordsLl"></label>
                        <textarea asp-for="MetaKeywordsLl" placeholder="Meta Keywords Local Language" class="form-control" required="required"></textarea>
                        <span class="text-danger" asp-validation-for="MetaKeywordsLl"></span>
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    <div class="col-md-12">
                        <label class="mandatory" asp-for="ContainerDescriptionEn"></label>
                        <textarea asp-for="ContainerDescriptionEn" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="ContainerDescriptionEn"></span>
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    <div class="col-md-12">
                        <label class="mandatory" asp-for="ContainerDescriptionLl"></label>
                        <textarea asp-for="ContainerDescriptionLl" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="ContainerDescriptionLl"></span>
                    </div>
                </div>
                <hr />

                <div class="form-row">
                    <div class="col-md-6">
                        <label class="mandatory" asp-for="ContainerContentImages"></label>
                        <input multiple="multiple" id="ContentFiles" class="multi" accept="gif|jpg|png|pdf" data-maxfile="5120" name="ContentFiles" type="file" />
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    <div class="form-group col-md-6">

                        @if (Model.ListofAttachments != null)
                        {
                            @if (Model.ListofAttachments.Any())
                            {

                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Attachment</th>
                                            <th>Download</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var attachment in Model.ListofAttachments)
                                        {
                                            <tr>
                                                <td>@attachment.OriginalAttachmentName</td>
                                                <td>
                                                    <a class="btn btn-primary"
                                                       data-toggle="tooltip" data-placement="top"
                                                       title="Download Attachment !" onclick="downloadAttachment('@Model.PageId', '@attachment.AttachmentId')" href="javascript:void(0);"> <i class="fa fa-download"></i> Download </a>

                                                </td>
                                                <td>
                                                    <a data-toggle="tooltip"
                                                       data-placement="top"
                                                       title="Delete Attachment !"
                                                       class="btn btn-danger" onclick="deleteAttachment('@attachment.AttachmentId', '@Model.PageId')" href="javascript:void(0);"> <i class="fa fa-trash"></i> Delete </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            }
                            else
                            {
                                <p> No Attachments</p>
                            }
                        }
                    </div>
                </div>

                <hr />
                <div class="form-row">

                    <div class="form-group col-md-3">
                        <label class="mandatory" asp-for="StatusId"></label>
                        <select asp-for="StatusId" class="form-control"
                                asp-items="@(new SelectList(Model.ListofStatus, "Value", "Text"))">
                        </select>
                        <span class="text-danger" asp-validation-for="StatusId"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <div class="form-check">
                            <input type="checkbox" asp-for="OpenInNewTab" class="form-check-input" />
                            <label class="form-check-label" asp-for="OpenInNewTab">OpenInNewTab</label>
                            <span class="text-danger" asp-validation-for="OpenInNewTab"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <div class="form-check">
                            <input type="checkbox" asp-for="IsNew" class="form-check-input" />
                            <label class="form-check-label" asp-for="IsNew">IsNew</label>
                            <span class="text-danger" asp-validation-for="IsNew"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group col-md-3">
                        <div class="form-check">
                            <input type="checkbox" asp-for="IsActive" class="form-check-input" />
                            <label class="form-check-label" asp-for="IsActive">Active</label>
                            <span class="text-danger" asp-validation-for="IsActive"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="button" id="btnsubmit" class="btn btn-success">Save</button>
                <a asp-area="Administration" class="btn btn-danger" asp-controller="NewPage" asp-action="Create">Clear</a>
                <a asp-area="Administration" class="btn btn-primary" asp-controller="NewPage" asp-action="Index">List</a>

            </div>
        </form>
    </div>
</div>

<script src="~/js/ckeditor/ckeditor.js"></script>
<script src="~/scripts/custom/jquery.MultiFile.min.js"></script>
<script type="text/javascript">
    CKEDITOR.replace('ContainerDescriptionEn',
        {
            on:
            {
                instanceReady: function (ev) {
                    this.dataProcessor.writer.setRules('*',
                        {
                            indent: false,
                            breakBeforeOpen: false,
                            breakAfterOpen: false,
                            breakBeforeClose: false,
                            breakAfterClose: false
                        });
                }
            }
        });


    CKEDITOR.replace('ContainerDescriptionLl',
        {
            on:
            {
                instanceReady: function (ev) {
                    this.dataProcessor.writer.setRules('*',
                        {
                            indent: false,
                            breakBeforeOpen: false,
                            breakAfterOpen: false,
                            breakBeforeClose: false,
                            breakAfterClose: false
                        });
                }
            }
        });


    CKEDITOR.editorConfig = function (config) {
        config.autoParagraph = false;
        config.fullPage = true;
        config.allowedContent = true;
        config.ignoreEmptyParagraph = true;
        config.tabSpaces = 0;
        config.forcePasteAsPlainText = true;
        config.enterMode = CKEDITOR.ENTER_DIV;
        config.basicEntities = true;
    };
    $(document).ready(function () {

        $("#btnsubmit").click(function () {
            if ($('#newPageform').valid()) {
                var containerDescriptionEn = CKEDITOR.instances.ContainerDescriptionEn.getData();
                var containerDescriptionLl = CKEDITOR.instances.ContainerDescriptionLl.getData();

                if ($("#Permalink").val() == "" && $("#Alias").val() == "") {
                    $.alert({
                        title: 'Validation!',
                        content: 'Enter Permalink or Alias.',
                        type: 'red'
                    });
                }
                else if (containerDescriptionEn === '') {

                    $.alert({
                        title: 'Validation!',
                        content: 'Enter Container Description (English).',
                        type: 'red'
                    });
                }
                else if (containerDescriptionLl === '') {

                    $.alert({
                        title: 'Validation!',
                        content: 'Enter Container Description (Marathi).',
                        type: 'red'
                    });
                }
                else {
                    $.confirm({
                        title: 'Confirmation!',
                        type: 'green',
                        content: 'Do you want to Create New Page?',
                        buttons: {
                            confirm: function () {
                                $("#loader").show();
                                $('#newPageform').submit();
                            },
                            cancel: function () {
                                $.alert('Canceled!');
                            }
                        }
                    });
                }
            }


        });





    });

    function downloadAttachment(pageId, attachmentsId) {
        window.location = "/Administration/Container/DownloadAttachment?pageId=" + pageId + "&AttachmentId=" + attachmentsId;
    }

    function deleteAttachment(attachmentsId, pageId) {
        var result = confirm("Do you want to delete this attachment!");
        if (result === true) {
            if (attachmentsId != "") {
                var jsonObject =
                {
                    attachmentsId: attachmentsId,
                    pageId: pageId
                };

                $.ajax({
                    type: "POST",
                    url: "/Administration/Container/DeleteAttachment",
                    dataType: "json",
                    data: jsonObject,
                    success: function (data, textStatus, xhr) {
                        if (data.Status === true) {
                            alert("Attachment Deleted Successfully");
                            location.reload();
                        } else {
                            alert("Something Went Wrong While Deleting Ticket Please Try Again after Sometime!");
                        }

                    },
                    error: function (xhr, status, err) {
                        if (xhr.status == 400) {
                            DisplayModelStateErrors(xhr.responseJSON.ModelState);
                        }
                    }
                });
            }
        }
    }


    function DisplayModelStateErrors(modelState) {
        var message = "";
        var propStrings = Object.keys(modelState);

        $.each(propStrings, function (i, propString) {
            var propErrors = modelState[propString];
            $.each(propErrors, function (j, propError) {
                message += propError;
            });
            message += "\n";
        });

        alert(message);
    };

    $(document).ready(function () {
        $("#ParentPageName").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Administration/NewPage/GetParentPage",
                    type: "GET",
                    dataType: "json",
                    data: { pagename: request.term },
                    success: function (data) {
                        response($.map(data,
                            function (item) {
                                return { label: item.Text, value: item.Value };
                            }));
                    }
                });
            },
            error: function (response) {
                alert(response.responseText);
            },
            failure: function (response) {
                alert(response.responseText);
            },
            select: function (e, i) {
                $("#ParentPageName").val(i.item.label);
                $("#HiddenParentPageId").val(i.item.value);
                return false;
            },
            change: function (event, ui) {
                if (ui.item == null || ui.item == undefined) {
                    $("#ParentPageName").val("");
                }
            },
            minLength: 2
        });

        $("#ChildPageName").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Administration/NewPage/GetChildPage",
                    type: "GET",
                    dataType: "json",
                    data: { childpagename: request.term, parentpageid: $("#HiddenParentPageId").val() },
                    success: function (data) {
                        response($.map(data,
                            function (item) {
                                return { label: item.Text, value: item.Value };
                            }));
                    }
                });
            },
            error: function (response) {
                alert(response.responseText);
            },
            failure: function (response) {
                alert(response.responseText);
            },
            select: function (e, i) {
                $("#ChildPageName").val(i.item.label);
                $("#HiddenChildPageId").val(i.item.value);
                return false;
            },
            change: function (event, ui) {
                if (ui.item == null || ui.item == undefined) {
                    $("#ChildPageName").val("");
                }
            },
            minLength: 2
        });
    });
</script>