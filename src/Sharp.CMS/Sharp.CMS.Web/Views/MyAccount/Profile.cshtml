@model Sharp.CMS.ViewModels.UserMaster.ProfileViewModel

<div class="row">
    <div class="col-md-3">

        <!-- Profile Image -->
        <div class="card card-primary card-outline">
            <div class="card-body box-profile">
                <div class="text-center">

                    @if (@Model.Profile.Gender == "M")
                    {
                    <img id="myprofile_pic" src="~/Images/faces/man.png" class="profile-user-img img-fluid img-circle" alt="User profile picture">
                    }
                    else
                    {
                    <img id="myprofile_pic" src="~/Images/faces/woman.png" class="profile-user-img img-fluid img-circle" alt="User profile picture">
                    }


                </div>
                <h3 class="profile-username text-center">@Model.Profile.FullName</h3>

                <p class="text-muted text-center">@Model.Profile.Designation</p>

                <a href="/Team/Members" class="btn btn-primary btn-block"><b>Show MyTeam</b></a>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- About Me Box -->
        <!-- /.card -->
    </div>
    <!-- /.col -->
    <div class="col-md-9">
        <div class="card card-primary card-outline">
            <div class="card-header p-2">
                <ul class="nav nav-pills">

                    <li class="nav-item"><a class="nav-link active" href="#settings" data-toggle="tab">Settings</a></li>
                    <li class="nav-item"><a class="nav-link" href="#activity" data-toggle="tab">Activity</a></li>
                </ul>
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane" id="activity">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Login Time</th>
                                    <th>Logout Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.ListofActivites)
                                {
                                <tr>
                                    <td>@log.CurrentDate</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(log.LoggedInAt))
                                        {
                                        <span>---</span>
                                        }
                                        else
                                        {

                                        <span>  @log.LoggedInAt</span>
                                        }
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(log.LoggedOutAt))
                                        {
                                        <span>---</span>
                                        }
                                        else
                                        {

                                        <span>  @log.LoggedOutAt</span>
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="tab-pane active" id="settings">
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label for="inputName" class="col-sm-2 col-form-label">FullName</label>
                                <div class="col-sm-4">
                                    <input type="email" class="form-control" disabled="disabled" id="inputName" value="@Model.Profile.FullName" placeholder="Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-4">
                                    <input type="email" class="form-control" disabled="disabled" id="inputEmail" value="@Model.Profile.EmailId" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">MobileNo</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" disabled="disabled" id="inputName2" value="@Model.Profile.MobileNo" placeholder="Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputFirstLoginOn" class="col-sm-2 col-form-label">FirstLoginOn</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" disabled="disabled" id="inputFirstLoginOn" value="@Model.Profile.FirstLoginDate" placeholder="Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputDesignation" class="col-sm-2 col-form-label">Designation</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" disabled="disabled" id="inputDesignation" value="@Model.Profile.Designation" placeholder="Name">
                                </div>
                            </div>


                        </form>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div><!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>