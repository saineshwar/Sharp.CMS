@using Sharp.CMS.Data.MediaAssets.Queries
@model List<Sharp.CMS.Models.Medias.AlbumModel>
@inject IMediaAssetsQueries IMediaAssetsQueries
@{
    ViewBag.PageName = "Menu Category";
    Layout = ViewBag.InnerPage == "1" ? "_InnerPageLayout" : "_Layout";
}



<div class="form-row">
    @foreach (var data in Model)
    {
        var albumdata = IMediaAssetsQueries.GetAlbumDetailsByAlbumId(data.AlbumId);
        
            @if (albumdata != null)
            {

                <div class="col-md-3">
                    <div class="card">
                        <img class="card-img-bottom" src="@albumdata.ThumbnailPath" alt="Card image" width="300" height="300">
                        <div class="card-body">


                            <a href="#" class="btn btn-primary">@albumdata.AlbumName</a>
                        </div>

                    </div>
                </div>

            }
       
    }
</div>

